<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChatActivity">


    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@color/colorGreen">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/onlineIcon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@id/profilePicture"
                android:layout_alignEnd="@id/profilePicture"
                android:layout_marginEnd="3dp"
                android:visibility="invisible"
                android:src="@drawable/online_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/isTyping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatView"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/sendMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:id="@+id/sendMessageLayout"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/showOptions"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add_green"/>

        <LinearLayout
            android:id="@+id/attachmentOptions"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/attachImageFromGallery"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_image_black_24dp" />

            <ImageView
                android:id="@+id/attachImageFromCamera"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_add_a_photo_black_24dp"/>

            <ImageView
                android:id="@+id/attachFile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_attach_file"/>
        </LinearLayout>

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/writeMessage"
            android:layout_marginStart="5dp"
            android:inputType="textMultiLine"/>

        <ImageView
            android:id="@+id/sendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_send"/>
    </LinearLayout>

</RelativeLayout>